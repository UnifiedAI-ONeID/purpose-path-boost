rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isRegisteredUser(userId) {
      return exists(/databases/$(database)/documents/users/$(userId));
    }

    function isCoachOrAdmin(userId) {
      let userRole = get(/databases/$(database)/documents/users/$(userId)).data.role;
      return userRole == 'coach' || userRole == 'admin';
    }

    function isOwner(authorId, userId) {
      return authorId == userId;
    }

    // Community Posts
    match /community_posts/{postId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && isRegisteredUser(request.auth.uid);
      allow update, delete: if request.auth != null && (isOwner(resource.data.authorId, request.auth.uid) || isCoachOrAdmin(request.auth.uid));

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && isRegisteredUser(request.auth.uid);
        allow update, delete: if request.auth != null && (isOwner(resource.data.authorId, request.auth.uid) || isCoachOrAdmin(request.auth.uid));
      }

      // Likes subcollection
      match /likes/{userId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && request.auth.uid == userId;
        allow delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Community Reports
    match /community_reports/{reportId} {
      allow create: if request.auth != null && isRegisteredUser(request.auth.uid);
      allow read, update: if request.auth != null && isCoachOrAdmin(request.auth.uid);
    }
  }
}
