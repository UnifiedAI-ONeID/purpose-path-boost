rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    function hasRole(role) {
      // Check role in user doc. 
      // WARNING: This requires a read. Custom Claims are better for prod performance/cost.
      // Current implementation assumes roles array in user doc.
      return isSignedIn() && 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.roles.hasAny([role]);
    }
    
    function isAdmin() {
      return hasRole('admin');
    }
    
    function isCoach() {
      return hasRole('coach') || isAdmin();
    }

    // --- User Profiles ---
    match /users/{userId} {
      // Users can read/write their own profile; Admins have full access.
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn(); // Allow creation on signup
      
      // Subcollections: Goals, Sessions, Receipts, Notifications, Progress
      match /goals/{goalId} {
        allow read, write: if isOwner(userId) || isCoach();
      }
      match /sessions/{sessionId} {
        allow read: if isOwner(userId) || isCoach();
        allow write: if isCoach(); // Only coaches/admins create session records
      }
      match /receipts/{receiptId} {
        allow read: if isOwner(userId) || isAdmin();
        allow write: if isAdmin(); // Receipts are system-generated
      }
      match /notifications/{nudgeId} {
        allow read, update: if isOwner(userId); // User can read & mark as read
        allow create: if isCoach(); // System or Coach sends nudges
      }
      match /funnel_progress/{funnelId} {
         allow read: if isOwner(userId) || isCoach();
         allow write: if isOwner(userId) || isCoach();
      }
      match /lesson_progress/{lessonId} {
        allow read, write: if isOwner(userId); // Users track their own progress
      }
    }

    // --- Bookings ---
    match /bookings/{bookingId} {
      // Owner can see their bookings; Coaches see all.
      allow read: if (isSignedIn() && resource.data.userId == request.auth.uid) || isCoach();
      allow create: if isSignedIn();
      allow update: if (isSignedIn() && resource.data.userId == request.auth.uid) || isCoach();
    }

    // --- Events ---
    match /events/{eventId} {
      allow read: if true; // Public read
      allow write: if isAdmin();
      
      match /registrations/{regId} {
        allow read: if (isSignedIn() && resource.data.userId == request.auth.uid) || isCoach();
        allow create: if isSignedIn();
        allow update: if isCoach(); // Status updates by admin/coach
      }
    }

    // --- Content (Blog, Coaching Offers, Lessons) ---
    match /content/blog/{postId} {
      allow read: if true;
      allow write: if isAdmin(); // Blog editing
    }
    
    match /products/coaching/{offerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /lessons/{lessonId} {
      // Public lessons allow read. Protected ones might need more checks.
      // Basic rule: Authenticated users can read lessons.
      allow read: if isSignedIn(); 
      allow write: if isAdmin();
    }

    // --- Leads & Orders ---
    match /leads/{leadId} {
      allow create: if true; // Public lead capture
      allow read, update: if isCoach();
    }
    
    match /orders/{orderId} {
      allow create: if true; // Public checkout start
      allow read: if (isSignedIn() && resource.data.userId == request.auth.uid) || isAdmin();
      allow update: if isAdmin();
    }

    // --- Config ---
    match /config/{configId} {
      allow read: if true; // Usually public config like event types
      allow write: if isAdmin();
    }
  }
}
