# Site Configuration
VITE_SITE_URL=https://zhengrowth.com

# Build Region (global or china)
# Use in build scripts: VITE_REGION=global npm run build
VITE_REGION=global

# SEO Configuration
VITE_SEO_INDEX=true
CN_DOMAINS=zhengrowth.cn,cn.zhengrowth.com

# Analytics (Optional)
VITE_POSTHOG_KEY=phc_xxxxx
VITE_UMAMI_WEBSITE_ID=xxxxx

# Translation API (Free tier available)
VITE_TRANSLATE_API=https://libretranslate.com

# Payment Gateway (Airwallex)
# Sign up at https://www.airwallex.com/ to get credentials
AIRWALLEX_API_KEY=xxxxx
AIRWALLEX_CLIENT_ID=xxxxx

# Cal.com for booking
# Update the cal links in Book.tsx after creating your Cal.com account and event types
# Example event types to create:
# - zhengrowth/discovery (30 min, free)
# - zhengrowth/single-session (60 min, paid)
# - zhengrowth/monthly-package (recurring, paid)
CALCOM_LINK=zhengrowth/discovery

# hCaptcha for spam protection (optional)
# Sign up at https://www.hcaptcha.com/
VITE_HCAPTCHA_SITE_KEY=xxxxx

# Supabase (for lead capture - optional, will be configured via Lovable Cloud)
VITE_SUPABASE_URL=
VITE_SUPABASE_PUBLISHABLE_KEY=
