{
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3.0.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/create-payment-link",
      "destination": "/api/create-payment-link.ts"
    },
    {
      "source": "/robots.txt",
      "destination": "/api/robots.ts"
    },
    {
      "source": "/sitemap-blogs.xml",
      "destination": "/api/sitemap-blogs.ts"
    },
    {
      "source": "/sitemap-events.xml",
      "destination": "/api/sitemap-events.ts"
    }
  ],
  "redirects": [
    {
      "source": "/admin",
      "destination": "https://admin.zhengrowth.com",
      "permanent": true
    },
    {
      "source": "/admin/:splat*",
      "destination": "https://admin.zhengrowth.com/#/:splat*",
      "permanent": true
    },
    {
      "source": "/book",
      "destination": "/coaching",
      "permanent": true
    },
    {
      "source": "/book/:path*",
      "destination": "/coaching",
      "permanent": true
    },
    {
      "source": "/book-session",
      "destination": "/coaching/discovery-20",
      "permanent": true
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
